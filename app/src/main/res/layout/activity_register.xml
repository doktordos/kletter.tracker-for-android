<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ims.fhj.at.klettertracker.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/prename"
            android:id="@+id/prenameTextView"
            android:gravity="center_vertical" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:inputType="text"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:id="@+id/prenameEditText"
            android:textColor="#000"
            android:text=""
            android:layout_gravity="right"
            android:gravity="center_vertical"
            style="@android:style/Theme.Material.Light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/surname"
            android:id="@+id/surnameTextView"
            android:gravity="center_vertical" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:id="@+id/surnameEditText"
            android:textColor="#000"
            android:text=""
            android:layout_gravity="right"
            android:gravity="center_vertical"
            style="@android:style/Theme.Material.Light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/email"
            android:id="@+id/mailTextView"
            android:gravity="center_vertical" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:id="@+id/mailEditText"
            android:textColor="#000"
            android:text=""
            android:layout_gravity="right"
            android:gravity="center_vertical"
            style="@android:style/Theme.Material.Light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/user"
            android:id="@+id/userTextView"
            android:gravity="center_vertical" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:id="@+id/userEditText"
            android:textColor="#000"
            android:text=""
            android:layout_gravity="right"
            android:gravity="center_vertical"
            style="@android:style/Theme.Material.Light"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin">
        <TextView
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="@string/password"
            android:id="@+id/passwordTextView"
            android:gravity="center_vertical" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:layout_marginLeft="20dp"
            android:id="@+id/passwordEditText"
            android:textColor="#000"
            android:text=""
            android:layout_gravity="right"
            android:gravity="center_vertical"
            style="@android:style/Theme.Material.Light"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:id="@+id/register_button2"
        android:background="#1D81BE"
        android:textColor="#FFFFFF" />

</LinearLayout>
